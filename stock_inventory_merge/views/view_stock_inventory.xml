<openerp><data>

    <!-- TODO FIXME set state != 'confirm'-->
    <record id="view_stock_inventory_form" model="ir.ui.view">
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form" />
        <field name="arch" type="xml">
            <button name="reset_real_qty" position="attributes">
                <attribute name="states">draft, cancel, confirm, done</attribute>
                <attribute name="attrs">{'invisible': ['|', ('filter', 'in', ['partial', 'product']), ('state', '!=', 'disabled')]}</attribute>
            </button>
            <button name="action_done" position="after">
                <button name="action_merge_duplicated_line" string="Merge Duplicated Lines" attrs="{'invisible': ['|', ('duplicates_qty', '=', 0), ('state', '!=', 'confirm')]}"
                    confirm="Are you sure to merge all duplicated lines ? It will sum all the quantities."/>
            </button>
            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="oe_right oe_button_box" name="buttons">
                    <button class="oe_inline oe_stat_button" type="action"
                            name="%(action_stock_inventory_line_duplicates)d" icon="fa-copy"
                            attrs="{'invisible': [('duplicates_qty', '=', 0)]}">
                        <field string="Duplicated Lines" name="duplicates_qty" widget="statinfo"/>
                    </button>
                 </div>
            </xpath>
        </field>
    </record>

    <record id="action_stock_inventory_merge" model="ir.actions.act_window">
      <field name="name">Merge Inventories</field>
      <field name="res_model">wizard.stock.inventory.merge</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <record id="value_stock_inventory_merge" model="ir.values">
      <field name="model_id" ref="stock.model_stock_inventory" />
      <field name="name">Merge Inventories</field>
      <field name="key2">client_action_multi</field>
      <field name="value" eval="'ir.actions.act_window,' + str(ref('action_stock_inventory_merge'))"/>
      <field name="key">action</field>
      <field name="model">stock.inventory</field>
    </record>

</data></openerp>
